# Enable recoloring
set recolor true

# Background and text
set recolor-darkcolor  "#fdf6e3"   # light background (like Gruvbox Yellow Light)
set recolor-lightcolor "#3c3836"   # dark text

# Statusbar colors
set statusbar-bg      "#fdf6e3"
set statusbar-fg      "#3c3836"

# Inputbar colors (for search and commands)
set inputbar-bg       "#fdf6e3"
set inputbar-fg       "#3c3836"

# Notification colors
set notification-bg   "#fdf6e3"
set notification-fg   "#3c3836"

# Font
set font "FiraCode Nerd Font 12"

# Optional: toggle recolor with F5
map <F5> set recolor toggle
